<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/MusicListViewItem"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/mp3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:clickable="false"
        android:focusable="false"
        android:maxHeight="70dip"
        android:maxWidth="70dip"
        android:paddingLeft="8dip"
        android:paddingTop="7dip"
        android:src="@drawable/mp31" >

    </ImageView>
    
    <RelativeLayout         
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.android.musicman.ScrollForeverTextView
            android:id="@+id/itemText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:paddingLeft="14dip"
            android:paddingTop="7dip"
            android:singleLine="true"
            android:text="@string/musicName"
            android:textColor="#fff"
            android:textIsSelectable="false"
            android:textSize="18dip" >
        </com.android.musicman.ScrollForeverTextView>
    
        <TextView
            android:id="@+id/itemText1"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/itemText"
            android:clickable="false"
            android:focusable="false"
            android:paddingBottom="7dip"
            android:paddingLeft="14dip"
            android:text="@string/singer"
            android:textColor="#fff"
            android:textIsSelectable="false"
            android:textSize="14dip" >
        </TextView>
        
        <TextView
            android:id="@+id/itemText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:paddingTop="34dip"
            android:paddingLeft="240dip"
            android:text="00:00"
            android:textColor="#fff"
            android:textIsSelectable="false"
            android:textSize="14dip" >

        </TextView>
    </RelativeLayout>
</LinearLayout>