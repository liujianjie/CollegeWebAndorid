<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="500dp"
    android:layout_height="700dp"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_tv_seat_id"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text=" 座号： " />

        <EditText
            android:id="@+id/id_et_seat_id"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/input_edittext" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_tv_seat_info"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="座位信息： " />

        <RadioGroup
            android:layout_width="200dp"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/id_rb_first_seat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="一等座" />

            <RadioButton
                android:id="@+id/id_rb_second_seat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="二等座" />
        </RadioGroup>
    </LinearLayout>


    <Button
        android:id="@+id/id_btn_add_ticket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确定" />

</LinearLayout>