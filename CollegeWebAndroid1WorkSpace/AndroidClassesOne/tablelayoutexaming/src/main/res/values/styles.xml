<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--T1的样式-->
    <style name="imgstyle">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:padding">8dp</item>

    </style>
    <style name="rowstyle">
        <item name="android:background">#aaccbbaa</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
    <!--T2的样式-->
    <style name="sty_tv">
        <item name="android:textSize">24sp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="sty_subj" parent="sty_tv">
        <item name="android:layout_width">210dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="sty_sc" parent="sty_tv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>
    <!--T3的样式-->
    <style name="t3_sty_tv">
        <item name="android:textSize">24sp</item>
    </style>
    <style name="t3_sty_table">
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
    </style>
    <style name="t3_sty_tablerow">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
    <style name="t3_sty_tablerow_tv" parent="t3_sty_tv">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="t3_sty_tablerow_ed">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_span">2</item>
    </style>
    <style name="t3_sty_tablerow_rdiobt">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--T4的样式-->
    <style name="t4_sty_tv">
        <item name="android:textSize">24sp</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="t4_sty_tablerow">
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <!--T5的样式-->
    <style name="t5_sty_table">
        <item name="android:layout_margin">40dp</item>
    </style>
    <style name="t5_sty_tablerow">
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">3dp</item>
    </style>
    <style name="t5_sty_tablerow_tv">
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:textSize">24dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background"></item>
    </style>
</resources>
