<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".T4"
    android:shrinkColumns="0,1,2">
    <TextView
        style="@style/t4_sty_tv"
        android:text="自制计算器"/>
    <TextView
        style="@style/t4_sty_tv"
        android:background="@color/t4_color1"
        android:layout_height="45dp"/>

    <TableRow
        style="@style/t4_sty_tablerow">
        <Button
            android:text="1"/>
        <Button
            android:text="2"/>
        <Button
            android:text="3"/>
        <Button
            android:layout_width="70dp"
            android:text="@string/t4_tv1"/>
        <Button
            android:layout_width="85dp"
            android:text="+"/>
    </TableRow>
    <TableRow
        style="@style/t4_sty_tablerow">
        <Button
            android:text="4"/>
        <Button
            android:text="5"/>
        <Button
            android:text="6"/>
        <Button
            android:layout_width="70dp"
            android:text="("/>
        <Button
            android:layout_width="85dp"
            android:text="-"/>
    </TableRow>
    <TableRow
        style="@style/t4_sty_tablerow">
        <Button
            android:text="7"/>
        <Button
            android:text="8"/>
        <Button
            android:text="9"/>
        <Button
            android:layout_width="70dp"
            android:text=")"/>
        <Button
            android:layout_width="85dp"
            android:text="*"/>
    </TableRow>
    <TableRow
        style="@style/t4_sty_tablerow">
        <Button
            android:text="0"/>
        <Button
            android:text="CE"/>
        <Button
            android:text="."/>
        <Button
            android:layout_width="70dp"
            android:text="="/>
        <Button
            android:layout_width="85dp"
            android:text="/"/>
    </TableRow>
</TableLayout>