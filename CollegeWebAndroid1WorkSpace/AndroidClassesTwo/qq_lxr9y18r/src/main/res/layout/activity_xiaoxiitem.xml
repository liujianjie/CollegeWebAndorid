<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">
    <com.example.qq_lxr9y18r.RoundView
        android:id="@+id/xiaoxiitem_ig"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_launcher" />
	<TextView
	    android:id="@+id/xiaoxiitem_tv_name"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_toRightOf="@id/xiaoxiitem_ig"
	    android:text="名字"
	    android:textSize="14sp" 
	    android:layout_marginLeft="8dp"
	    android:layout_marginTop="2dp"/>
    
	<TextView
	    android:id="@+id/xiaoxiitem_tv_content"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBottom="@+id/xiaoxiitem_ig"
	    android:layout_alignLeft="@+id/xiaoxiitem_tv_name"
	    android:text="222"
	    android:textColor="#B9B9B9"
	    android:textSize="12sp" />

	<TextView
	    android:id="@+id/xiaoxiitem_tv_date"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_above="@+id/xiaoxiitem_tv_content"
	    android:layout_alignParentRight="true"
	    android:layout_marginRight="10dp"
	    android:text="222"
	    android:textColor="#B9B9B9"
	    android:textSize="13sp" />
	
</RelativeLayout>
