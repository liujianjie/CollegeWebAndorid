<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"  >
    <RelativeLayout 
        android:id="@+id/space_rl1"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:background="@drawable/space_bg2">
        
        <LinearLayout 
	        android:id="@+id/space_ll1"
	        android:layout_width="match_parent"
	        android:layout_height="30dp"
	        android:weightSum="7"
	        android:background="#000000"
	        android:orientation="horizontal"
	        android:layout_alignParentBottom="true">
		
        <TextView 
            android:id="@+id/space_ll1_tv1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:text="相册"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textSize="12sp"/>
        <RelativeLayout 
            android:id="@+id/space_ll1_rl1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5">
            <View 
	            android:id="@+id/space_ll1_rl1_view1"
	            android:layout_width="1dp"
	            android:layout_height="15dp"
	           	android:background="#ffffff"
	            android:layout_centerInParent="true"/> 
        </RelativeLayout>
		<TextView 
            android:id="@+id/space_ll1_tv2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.4"
            android:text="说说"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textSize="12sp"/>
		<RelativeLayout 
            android:id="@+id/space_ll1_rl2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5">
            <View 
	            android:id="@+id/space_ll1_rl1_view2"
	            android:layout_width="1dp"
	            android:layout_height="15dp"
	           	android:background="#ffffff"
	            android:layout_centerInParent="true"/> 
        </RelativeLayout>
        <TextView 
            android:id="@+id/space_ll1_tv3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.4"
            android:text="个性化"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textSize="12sp"/>
        <RelativeLayout 
            android:id="@+id/space_ll1_rl3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5">
            <View 
	            android:id="@+id/space_ll1_rl1_view3"
	            android:layout_width="1dp"
	            android:layout_height="15dp"
	           	android:background="#ffffff"
	            android:layout_centerInParent="true"/> 
        </RelativeLayout>
        <TextView 
            android:id="@+id/space_ll1_tv4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.4"
            android:text="@string/withme"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textSize="12sp"/>
    </LinearLayout> 
        
    </RelativeLayout>
    
    <RelativeLayout 
        android:id="@+id/spaceitem_rl2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="8dp"
        android:layout_below="@id/space_rl1"
        android:background="#ffffff">
        <com.example.qq_lxr9y18r.RoundView 
	        android:id="@+id/spaceitem_tv1_touxiang"
	        android:layout_width="40dp"
	        android:layout_height="40dp"/>
		<TextView 
		    android:id="@+id/spaceitem_tv2_name"
		    android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="张飞"
	        android:layout_toRightOf="@id/spaceitem_tv1_touxiang"
	        android:layout_alignTop="@id/spaceitem_tv1_touxiang"
	        android:layout_marginLeft="5dp"/>
		<TextView 
		    android:id="@+id/spaceitem_tv3_date"
		    android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="今天12:40"
	        android:layout_toRightOf="@id/spaceitem_tv1_touxiang"
	        android:layout_below="@id/spaceitem_tv2_name"
	        android:textColor="#d8d8d8"
	        android:textSize="12sp"
	        android:layout_marginLeft="5dp"
	        />
		<TextView 
		    android:id="@+id/spaceitem_tv4_content"
		    android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/spaceitem_tv1_touxiang"
	        android:layout_marginTop="12dp"
	        android:layout_marginBottom="10dp"/>
	    <com.example.qq_lxr9y18r.chongxie.ChongXieGridView 
	        android:id="@+id/spaceitem_gv"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	       	android:horizontalSpacing="7dp"
	        android:stretchMode="columnWidth"
	        android:verticalSpacing="7dp"
	       	android:layout_column="0"
	        android:layout_gravity="right|center_vertical"
	        android:layout_row="0"
	        android:layout_below="@id/spaceitem_tv4_content"
	        android:visibility="gone" >
	    </com.example.qq_lxr9y18r.chongxie.ChongXieGridView>    
		
	    <View android:id="@+id/spaceitem_line"
	        android:layout_width="match_parent" 
	        android:layout_height="0.5dp"
	        android:layout_below="@id/spaceitem_gv"
	        android:background="#d8d8d8"
	        android:layout_marginTop="10dp"/>
	    <EditText 
	        android:id="@+id/spaceitem_edit1_pl"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="8dp"
	        android:hint="评论"
	        android:textSize="12dp"
	        android:textColor="#ffffff"
	        android:layout_below="@id/spaceitem_line"/>
    </RelativeLayout>
    <View android:id="@+id/spaceitem_line2"
       android:layout_width="match_parent" 
       android:layout_height="8dp"
       android:layout_below="@id/spaceitem_rl2"
       android:background="#ebebeb"
       android:layout_marginTop="10dp"/>
</RelativeLayout>
