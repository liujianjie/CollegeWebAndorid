<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout 
        android:id="@+id/space_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="#12B9F6">
        
        <TextView
            android:id="@+id/space_rl1_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="返回"
            android:textColor="#ffffff"
            android:textSize="13sp" 
            android:drawableLeft="@drawable/zhen_zjiantou"
            android:gravity="center"/>
        <TextView 
            android:id="@+id/space_rl1_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="好友动态"
            android:layout_centerInParent="true"
            android:textColor="#ffffff"/>
        
        <ImageView 
            android:id="@+id/space_rl1_iv1"
            android:layout_height="25dp"
            android:layout_width="25dp"
            android:layout_alignParentRight="true"
             android:layout_centerVertical="true"
            android:src="@drawable/lsr"/>
    </RelativeLayout>
    <ListView 
        android:id="@+id/space_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#FFCC00"
        android:background="#ffffff"
        android:layout_below="@id/space_rl">
        
    </ListView>
</RelativeLayout>
    
