<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:padding="6dp"
    android:background="#ffffff">
    
    <com.example.qq_lxr9y18r.RoundView
        android:id="@+id/selhyitem_ig1"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="4dp"
        android:src="@drawable/head_1" />
    
    <TextView 
        android:id="@+id/selhyitem_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/selhyitem_ig1"
        android:layout_alignTop="@id/selhyitem_ig1"
        android:text="名字"
        android:textSize="13sp"
        android:layout_marginLeft="5dp"/>
    <!-- 这里应该放性别图片 -->
    <TextView 
        android:id="@+id/selhyitem_ig2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/selhyitem_tv1"
        android:layout_toRightOf="@id/selhyitem_ig1"
        android:text="男"
        android:textSize="11sp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="1dp"/>
	<TextView 
        android:id="@+id/selhyitem_tv2"
        android:textSize="11sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/selhyitem_tv1"
        android:layout_toRightOf="@id/selhyitem_ig2"
        android:text="222"
        android:layout_marginTop="1dp"/>
</RelativeLayout>
