<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#ffffff">
 
    <TextView 
	    android:id="@+id/setting_title"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:gravity="center"
	    android:padding="10dp"
	    android:text="设置"
	    android:background="#ccbbaa"
	    android:layout_weight="1"/>
    <TableLayout 
	    android:layout_width="match_parent"  
	    android:layout_height="0dp"  
	    android:layout_marginLeft="30dp"
	    android:layout_marginRight="30dp"
	    android:layout_marginTop="30dp"
	    android:layout_marginBottom="40dp"  
	    android:layout_weight="7"
	    android:textSize="18sp"
	    android:background="#ffffff"
	    android:stretchColumns="1">
    	
        <TableRow 
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:alpha="1">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="主页一行显示多少"/>
           	<Spinner 
           	    android:id="@+id/setting_mainsp"
           	    android:layout_width="wrap_content"
           	    android:layout_height="match_parent"
           	    android:gravity="center"
           	    />
        </TableRow>
        <TableRow 
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:alpha="1">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="相册一行显示多少"/>
           	<Spinner 
           	    android:id="@+id/setting_photosp"
           	    android:layout_width="wrap_content"
           	    android:layout_height="match_parent"
           	    android:gravity="left"
           	    />
        </TableRow>
        <TableRow 
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:alpha="1">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="爱好一行显示多少"/>
           	<Spinner 
           	    android:id="@+id/setting_hobbysp"
           	    android:layout_width="wrap_content"
           	    android:layout_height="match_parent"
           	    android:gravity="left"
           	    />
        </TableRow>    
        <TableRow 
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:alpha="1">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="标题大小"/>
           	<Spinner 
           	    android:id="@+id/setting_titlesp"
           	    android:layout_width="wrap_content"
           	    android:layout_height="match_parent"
           	    android:gravity="left"
           	    />
        </TableRow>                 
	</TableLayout>
    <LinearLayout 
        android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"
	    android:orientation="horizontal"
	    android:gravity="center">
	    <Button 
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:text="确定"
		    android:onClick="SettingAlter"
		    android:layout_weight="1"/>

		<Button 
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:text="返回"
		    android:onClick="Back"
		    android:layout_weight="1"/>
        
    </LinearLayout>
</LinearLayout>
