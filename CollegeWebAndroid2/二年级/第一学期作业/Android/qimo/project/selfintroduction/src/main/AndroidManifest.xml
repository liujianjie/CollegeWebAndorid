<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.selfintroduction">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- 在sdcard中创建/删除文件的权限 -->
    <!-- <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"></uses-permission> -->
    <application
        android:name="com.example.application.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/top1"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PersonalProfileActivity"></activity>
        <activity android:name=".PhotoActivity"></activity>
        <activity android:name=".HobbyActivity"></activity>
        <activity android:name=".HobbyAlterActivity"></activity>
        <activity
            android:name=".PersonalAlterActivity"
            android:windowSoftInputMode="adjustPan"></activity>
        <activity android:name=".SettingActivity"></activity>
        <activity
            android:name=".PhotoDetailActivity">
        </activity>
    </application>

</manifest>